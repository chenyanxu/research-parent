<?xml version="1.0" encoding="UTF-8"?>

<!-- default-activation="lazy" -->
<blueprint xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <jpa:enable/>
    <tx:enable-annotations/>

    <!--教师dao-->
    <service id="teacherBeanDao" ref="teacherBeanDaoImpl" interface="com.kalix.research.person.api.dao.ITeacherBeanDao"/>

    <bean id="teacherBeanDaoImpl"
          class="com.kalix.research.person.dao.TeacherBeanDaoImpl"> <!--init-method="init">-->
        <tx:transaction method="*" value="Required"/>
    </bean>

    <!--学生dao-->
    <service id="studentBeanDao" ref="studentBeanDaoImpl" interface="com.kalix.research.person.api.dao.IStudentBeanDao"/>

    <bean id="studentBeanDaoImpl"
          class="com.kalix.research.person.dao.StudentBeanDaoImpl"> <!--init-method="init">-->
        <tx:transaction method="*" value="Required"/>
    </bean>

    <!--科研人员dao-->
    <service id="workerBeanDao" ref="workerBeanDaoImpl" interface="com.kalix.research.person.api.dao.IWorkerBeanDao"/>

    <bean id="workerBeanDaoImpl"
          class="com.kalix.research.person.dao.WorkerBeanDaoImpl"> <!--init-method="init">-->
        <tx:transaction method="*" value="Required"/>
    </bean>
</blueprint>
