<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <jpa:enable/>
    <tx:enable-annotations/>

    <reference id="teacherBeanDao" interface="com.kalix.research.person.api.dao.ITeacherBeanDao"/>
    <reference id="studentBeanDao" interface="com.kalix.research.person.api.dao.IStudentBeanDao"/>
    <reference id="workerBeanDao" interface="com.kalix.research.person.api.dao.IWorkerBeanDao"/>
    <reference id="userBeanService" interface="com.kalix.admin.core.api.biz.IUserBeanService"/>
    <reference id="organizationBeanService" interface="com.kalix.admin.core.api.biz.IOrganizationBeanService"/>

    <!--教师服务注册-->
    <bean id="teacherBeanServiceImpl" class="com.kalix.research.person.biz.TeacherBeanServiceImpl">
        <property name="dao" ref="teacherBeanDao"/>
        <property name="userBeanService" ref="userBeanService"/>
        <property name="organizationBeanService" ref="organizationBeanService"/>
    </bean>
    <service id="teacherBeanService" ref="teacherBeanServiceImpl"
             interface="com.kalix.research.person.api.biz.ITeacherBeanService"/>

    <!--学生服务注册-->
    <bean id="studentBeanServiceImpl" class="com.kalix.research.person.biz.StudentBeanServiceImpl">
        <property name="dao" ref="studentBeanDao"/>
        <property name="userBeanService" ref="userBeanService"/>
        <property name="organizationBeanService" ref="organizationBeanService"/>
    </bean>
    <service id="studentBeanService" ref="studentBeanServiceImpl"
             interface="com.kalix.research.person.api.biz.IStudentBeanService"/>

    <!--科研人员服务注册-->
    <bean id="workerBeanServiceImpl" class="com.kalix.research.person.biz.WorkerBeanServiceImpl">
        <property name="dao" ref="workerBeanDao"/>
        <property name="userBeanService" ref="userBeanService"/>
        <property name="organizationBeanService" ref="organizationBeanService"/>
    </bean>
    <service id="workerBeanService" ref="workerBeanServiceImpl"
             interface="com.kalix.research.person.api.biz.IWorkerBeanService"/>
</blueprint>
